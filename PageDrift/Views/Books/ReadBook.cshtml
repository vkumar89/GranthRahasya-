@model PageDrift.Models.Books
@{
    ViewBag.Title = "ReadBook";
}


<style>
    .pdf {
        width: 100%;
    }
</style>

<body>
    <h1 class="text-center " style="background-color:gold"> @Html.DisplayFor(B => B.Title)</h1>

    @if (Model.File.Contains("pdf"))
    {<iframe class="pdf "
             src="~/Uploads/@Model.File"
             width="400" height="500">
        </iframe>
    }
    else if (Model.File.Contains("mp4"))
    {
        <video width="100%" height="100%" controls>
            <source src="~/Uploads/@Model.File" type="video/mp4">
            <source src="~/Uploads/@Model.File" type="video/ogg">
            Your browser does not support the video tag.
        </video>
    }
    else
    {
        <div class="container mt-5">
            <div class="card" style="width: 100%;">
                <div class="card-body">
                    <h5 class="card-title">Enjoy the Media</h5>
                    <div class="text-center mb-3">
                        <img src="~/Images/giphy.gif" class="img-fluid" alt="Responsive image" style="max-width: 100%; height: auto;">
                    </div>
                    <div class="text-center">
                        <audio controls class="w-100">
                            <source src="~/Uploads/@Model.File" type="audio/ogg">
                            <source src="~/Uploads/@Model.File" type="audio/mpeg">
                            Your browser does not support the audio element.
                        </audio>
                    </div>
                </div>
            </div>
        </div>
    }



    <a href="http://localhost:50999/Books/DisplayBook/@Model.BookId">
        <button class="btn btn-warning w-100">
            @Html.ActionLink("Back", "DisplayBook", new { id = Model.BookId }, new { @class = "text-decoration-none text-light" })
        </button>
    </a>

</body>
